extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Placeholder Portfolio

      p.lead.text-light
        | This is a project with placeholder info to complete a project for learning Express.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src='https://placehold.it/550x550')
            h5 #{project.description}
      
